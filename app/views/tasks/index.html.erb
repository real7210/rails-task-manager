<div class="container mt-3">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <% if task.completed? %>
      <i class="fa-regular fa-square-check"></i>
    <% else %>
      <i class="fa-regular fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
  <% end %>
  <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
</div>
