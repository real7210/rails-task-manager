<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <%= link_to "Back", tasks_path  %>
  <%= link_to "edit", edit_task_path(@task) %>
  <%= link_to task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" }, class: 'btn btn-secondary' do %>
    <i class="fa-solid fa-circle-xmark"></i>
  <% end %>
</div>
